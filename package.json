{
  "name": "leastsquares",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://leastsquares.io",
  "dependencies": {
    "@tailwindcss/typography": "^0.2.0",
    "@tailwindcss/ui": "^0.3.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@zeit/next-css": "^1.0.1",
    "next": "^9.4.4",
    "purify-css": "^1.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-text-loop": "^2.3.0"
  },
  "scripts": {
    "dev": "next",
    "prune:style": "purifycss styles/tailwind.css components/*.js --min --info --out styles/tailwind.css",
    "build:style": "tailwind build styles/index.css -o styles/tailwind.css",
    "start": "npm run build:style && next start",
    "build": "next build",
    "export": "next export",
    "deploy": "npm run build:style && npm run prune:style && npm run build && npm run export"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "gh-pages": "^3.1.0",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.5.1"
  }
}
